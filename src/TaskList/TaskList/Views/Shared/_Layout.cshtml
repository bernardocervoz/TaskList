@using TaskList.Helpers;
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap core CSS -->
    @*<link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">*@

    <!-- Custom styles for this template -->
    @*<link href="css/modern-business.css" rel="stylesheet">*@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-default navbar-fixed-top navbar-green" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="~/Home/Index">Task List</a>

        </div>
        <div class="navbar-collapse collapse">
            <!-- Right nav -->
            <ul class="nav navbar-nav navbar-right">
            </ul>

        </div><!--/.nav-collapse -->
    </nav>


    <div class="modal fade bs-example-modal-sm" id="msgModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="font-size:14px; font-weight:bold">...</div>
                <div class="modal-body">...</div>
                <div class="modal-footer">...</div>
            </div>
        </div>
    </div>

    <div class="modal" id="modalLoading" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-Fundo">
            <div class="modal-processing" id="modal_processing">
                <span style="padding: 10px; border: 2px solid rgb(192, 192, 192);">
                    <img src="@Url.Action("..\\Images\\loading-round.gif")" alt="processando"> Processando...
                </span>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <script type="text/javascript">
        var urlProcessing = '@Url.Action("..\\Images\\loading-round.gif")';
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/TaskList")
    @Scripts.Render("~/bundles/jquerymask")
    @Scripts.Render("~/bundles/jptablemin")
    @*@Scripts.Render("~/bundles/jptablecustom")*@

    @if (TempData["Mensagem"] != null)
    {
        MessageDialog msgBox = TempData["Mensagem"] as MessageDialog;
        <script type="text/javascript">

            $(document).ready(function () {

                @if (msgBox.Modal)
                {
                    <text>
                    ShowMsgModal('@msgBox.Title', '@msgBox.Message');
                    </text>
                }
                else
                {
                    <text>

                    $('<div class="alert" style="color:#fff; background-color:rgba(50, 118, 177, 0.65); border-color:#3276b1;" role="alert"><strong> @msgBox.Message</strong ></div > ').insertAfter($('.msgCadastro'))
                    $('.alert').fadeTo(2000, 500).slideUp(500, function () {
                        $("#success-alert").slideUp(500);
                    });

                    </text>
                }

            });
        </script>
        TempData["Mensagem"] = null;
    }

    @RenderSection("scripts", required: false)



</body>
</html>
